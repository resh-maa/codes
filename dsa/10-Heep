#include <iostream>
#include <vector>
#include <queue> // For priority_queue

using namespace std;

int main() {
    int n;
    cout << "Enter number of students: ";
    cin >> n;

    vector<int> marks(n);
    cout << "Enter the marks obtained by students:\n";
    for (int i = 0; i < n; ++i) {
        cin >> marks[i];
    }

    // Max-heap for maximum marks
    priority_queue<int> maxHeap;

    // Min-heap for minimum marks (use greater comparator)
    priority_queue<int, vector<int>, greater<int>> minHeap;

    // Insert all marks into both heaps
    for (int i = 0; i < n; ++i) {
        maxHeap.push(marks[i]);
        minHeap.push(marks[i]);
    }

    // Top of maxHeap is maximum mark
    int maxMark = maxHeap.top();

    // Top of minHeap is minimum mark
    int minMark = minHeap.top();

    cout << "Maximum Marks: " << maxMark << endl;
    cout << "Minimum Marks: " << minMark << endl;

    return 0;
}
